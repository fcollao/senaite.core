    <!-- GENERIC PERMISSIONS -->
    <permission name="BIKA: Add Analysis" acquire="False">
      <role name="LabClerk"/>
      <role name="LabManager"/>
      <role name="Manager"/>
      <!-- @xispa conflicts
      ar_workflow permissions:
      - scheduled_sampling: +Sampler, +Owner
      - to_be_sampled:      +Sampler, +Owner
      - sample_due:         +Owner
      - to_be_verified:     -LabClerk
