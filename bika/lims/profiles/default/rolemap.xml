    <permission name="BIKA: View Results" acquire="False">
      <role name="Analyst"/>
      <role name="LabClerk"/>
      <role name="LabManager"/>
      <role name="Manager"/>
      <role name="Preserver"/>
      <role name="Publisher"/>
